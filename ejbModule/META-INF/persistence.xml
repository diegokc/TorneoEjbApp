<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
		http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">

<persistence-unit name="torneo-ejb-app" transaction-type="RESOURCE_LOCAL">
	<jta-data-source>java:jboss/datasources/TorneoDS</jta-data-source>

   <!-- additional properties - can include hibernate properties here -->
    <properties>
		<property name="hibernate.hbm2ddl.auto" value="update" />
	<property name="hibernate.archive.autodetection" value="class, hbm"/>
          <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
          <property name="hibernate.show_sql" value="true" />
	</properties>
</persistence-unit>
</persistence>
